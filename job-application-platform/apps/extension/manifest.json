{
  "manifest_version": 3,
  "name": "JobFlow - Intelligent Application Assistant",
  "version": "1.0.0",
  "description": "AI-powered job application autofill that learns from your actions",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://dusti.pro/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["api.js", "content.js", "floating-panel.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle JobFlow Panel"
  }
}
